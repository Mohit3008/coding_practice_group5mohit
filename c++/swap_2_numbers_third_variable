// To swap two numbers without using third variable

# include <iostream>
using namespace std;
int main()
{
    int x,y;
    cout<<"Enter the first number: ";
    cin>>x;
    cout<<"Enter the second number: ";
    cin>>y;
    cout<<"Before swapping: x = " <<x <<" y = " <<y <<endl;
    x=x+y;
    y=x-y;
    x=x-y;
    cout<<"After swapping: x = " <<x <<" y = " <<y <<endl;
    return 0;
}
